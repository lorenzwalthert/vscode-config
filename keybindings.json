// https://code.visualstudio.com/api/references/when-clause-contexts

[
    // r keyboard shortucuts
    {
        "key": "shift+cmd+l",
        "command": "r.loadAll",
        "when": "editorLangId == 'r'"
    },
    {
        "key": "shift+cmd+b",
        "command": "r.build",
        "when": "editorLangId == 'r'"
    },
    {
        "key": "shift+cmd+t",
        "command": "r.test",
        "when": "editorLangId == 'r'"
    },
    // python
    //// repl: Cmd + Enter like in RStudio
    ////// outside debugger
    {
        "key": "cmd+enter",
        "command": "macros.pythonExecSelectionAndCursorDown",
        "when": "editorTextFocus && !jupyter.ownsSelection && editorLangId == 'python' && !inDebugMode"
    },
    {
            "key": "cmd+enter",
            "command": "macros.pythonExecSelectionJupyterAndCursorDown",
            "when": "editorTextFocus && jupyter.hascodecells && editorLangId == 'python' && !inDebugMode"
    },
    ////// in debugger
    {
        "key": "cmd+enter",
        "command": "editor.debug.action.selectionToRepl", 
        "when": "editorTextFocus && inDebugMode && editorHasSelection",
    },
    {
        "key": "cmd+enter",
        "command": "macros.pythonExecSelectionDebugAndCursorDown", 
        "when": "editorTextFocus && inDebugMode && !editorHasSelection",
    },
    // general 
    {
        "key": "cmd+enter",
        "command": "workbench.action.terminal.runSelectedText",
        "when": "editorLangId !='python'"
    },

]